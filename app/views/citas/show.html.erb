<%- model_class = Cita -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:paciente_id) %>:</strong></dt>
  <dd><%= @cita.paciente.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @cita.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hora_inicial) %>:</strong></dt>
  <dd><%= @cita.hora_inicial.strftime("%I:%M %p") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hora_final) %>:</strong></dt>
  <dd><%= @cita.hora_final.strftime("%I:%M %p") %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @cita.descripcion %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              citas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cita_path(@cita), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cita_path(@cita),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
