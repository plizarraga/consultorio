<%= form_for @cita, :html => { :class => "form-horizontal cita" } do |f| %>

    <% if @cita.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@cita.errors.count, "error") %> prohibited this cita from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @cita.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :paciente_id, :class => 'control-label col-md-2' %>
    <div class="controls col-md-4">
      <%= f.collection_select :paciente_id, @pacientes, :id, :nombre, {prompt: "-- Seleccionar --"}, {:class => 'form-control'} %>
    </div>
    <%= error_span(@cita[:paciente_id]) %>
  </div>

  <div class="form-group">
    <%= f.label :fecha, :class => 'control-label col-md-2' %>
    <div class="controls  col-md-4">
      <%= f.text_field :fecha, :class => 'form-control' %>
    </div>
    <%= error_span(@cita[:fecha]) %>
  </div>
  <div class="form-group">
    <%= f.label :hora_inicial, :class => 'control-label col-md-2' %>
    <div class="controls  col-md-4">
      <%= f.text_field :hora_inicial, :class => 'form-control' %>
    </div>
    <%= error_span(@cita[:hora_inicial]) %>
  </div>
  <div class="form-group">
    <%= f.label :hora_final, :class => 'control-label col-md-2' %>
    <div class="controls  col-md-4">
      <%= f.text_field :hora_final, :class => 'form-control' %>
    </div>
    <%= error_span(@cita[:hora_final]) %>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, :class => 'control-label col-md-2' %>
    <div class="controls  col-md-4">
      <%= f.text_area :descripcion, :class => 'form-control' %>
    </div>
    <%= error_span(@cita[:descripcion]) %>
  </div>

  <div class="form-group">
    <div class="controls  col-md-4 col-md-offset-2">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            citas_path, :class => 'btn btn-default' %>
    </div>
  </div>


<% end %>
